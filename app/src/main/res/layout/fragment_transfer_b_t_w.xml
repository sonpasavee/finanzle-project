<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfulltoptest"
    tools:context=".Transfer.TransferBTW.TransferBTWFragment">

    <ImageView
        android:id="@+id/backtotransfer"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/arrowbackiconremovebg"
        app:layout_constraintEnd_toStartOf="@+id/transferBTWPN1"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />
    <!-- FrameLayout สำหรับ Fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/transferBTWPN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:fontFamily="@font/kanitmedium"
        android:text="Pockets"
        android:textColor="#F6EEEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransferBTWPN2" />

    <TextView
        android:id="@+id/TransferBTWPN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/kanitmedium"
        android:text="Transfer Between"
        android:textColor="#F6EEEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>