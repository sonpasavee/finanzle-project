<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <solid android:color="#30000000"/> <!-- เงาสีดำโปร่งใส -->
            <padding android:left="0dp" android:right="0dp" android:top="4dp" android:bottom="6dp"/>
        </shape>
    </item>

    <!-- Main Button -->
    <item android:top="-4dp" >
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <solid android:color="#4DA1A9"/> <!-- พื้นหลังสีเขียว -->
        </shape>
    </item>

</layer-list>
